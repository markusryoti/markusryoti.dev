<section class="flex justify-center bg-background pt-20 pb-40">
  <form
    method="post"
    class="flex flex-col items-center gap-2 w-full px-8"
    id="mail-list-form"
  >
    <h3 class="text-3xl text-white">Join Mailing List</h3>
    <h2 class="text-accentlight w-full md:w-1/3">
      Don't miss out! Subscribe to my mailing list for insider knowledge, early
      access to resources, and limited-time offers.
    </h2>
    <div>
      <input
        type="email"
        name="email"
        placeholder="Email"
        class="w-full md:w-[600px] h-16 rounded rounded-2xl p-2 pl-4"
      />
      <button
        class="h-16 w-full md:w-24 bg-accent p-4 mt-2 rounded rounded-2xl text-white font-semibold uppercase"
        >Join</button
      >
    </div>
  </form>
</section>
